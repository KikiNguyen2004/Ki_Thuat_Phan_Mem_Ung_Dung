package MVC.View.QLPK;

import javax.swing.*;
import java.awt.*;

public class PatientManagementView extends JFrame {
    public JComboBox<String> patientIDBox;
    public JTextField patientIDField;
    public JTextField passwordField;
    public JTextField nameField;
    public JTextField dobField;
    public JTextField phoneField;
    public JTextField emailField;
    public JTextField occupationField;
    public JTextField permissionIDField;
    public JButton searchButton;
    public JButton addButton;
    public JButton updateButton;
    public JButton deleteButton;

    public PatientManagementView() {
        setTitle("Patient Management");
        setSize(1000, 800);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        Container contentPane = getContentPane();
        contentPane.setLayout(null);

        // Dropdown for patient IDs
        JLabel patientIDLabel = new JLabel("Patient ID:");
        patientIDLabel.setLocation(30, 50);
        patientIDLabel.setSize(100, 30);
        patientIDBox = new JComboBox<>();
        patientIDBox.setLocation(140, 50);
        patientIDBox.setSize(200, 30);
        
        // Patient ID field
        JLabel patientIDLabel = new JLabel("Patient ID: ");
        patientIDLabel.setLocation(30,400);
        patientIDLabel.setSize(100,30);
        patientIDField = new JTextField();
        patientIDField.setLocation(140,400);
        patientIDField.setSize(300,30);
        
        // Password field
        JLabel passwordLabel = new JLabel("Password:");
        passwordLabel.setLocation(30, 450);
        passwordLabel.setSize(100, 30);
        passwordField = new JTextField();
        passwordField.setLocation(140, 450);
        passwordField.setSize(300, 30);
        

        // Name field
        JLabel nameLabel = new JLabel("Name:");
        nameLabel.setLocation(30, 100);
        nameLabel.setSize(100, 30);
        nameField = new JTextField();
        nameField.setLocation(140, 100);
        nameField.setSize(300, 30);
        
        // DOB field
        JLabel dobLabel = new JLabel("Date of Birth:");
        dobLabel.setLocation(30, 150);
        dobLabel.setSize(100, 30);
        dobField = new JTextField();
        dobField.setLocation(140, 150);
        dobField.setSize(200, 30);

        // Phone field
        JLabel phoneLabel = new JLabel("Phone:");
        phoneLabel.setLocation(30, 200);
        phoneLabel.setSize(100, 30);
        phoneField = new JTextField();
        phoneField.setLocation(140, 200);
        phoneField.setSize(200, 30);

        // Email field
        JLabel emailLabel = new JLabel("Email:");
        emailLabel.setLocation(30, 250);
        emailLabel.setSize(100, 30);
        emailField = new JTextField();
        emailField.setLocation(140, 250);
        emailField.setSize(300, 30);

        // Occupation field
        JLabel occupationLabel = new JLabel("Occupation:");
        occupationLabel.setLocation(30, 300);
        occupationLabel.setSize(100, 30);
        occupationField = new JTextField();
        occupationField.setLocation(140, 300);
        occupationField.setSize(300, 30);

        // Permission ID field
        JLabel permissionIDLabel = new JLabel("Permission ID:");
        permissionIDLabel.setLocation(30, 350);
        permissionIDLabel.setSize(100, 30);
        permissionIDField = new JTextField();
        permissionIDField.setLocation(140, 350);
        permissionIDField.setSize(200, 30);

        // Buttons
        searchButton = new JButton("Search");
        searchButton.setLocation(400, 50);
        searchButton.setSize(120, 40);

        addButton = new JButton("Add");
        addButton.setLocation(400, 100);
        addButton.setSize(120, 40);

        updateButton = new JButton("Update");
        updateButton.setLocation(400, 150);
        updateButton.setSize(120, 40);

        deleteButton = new JButton("Delete");
        deleteButton.setLocation(400, 200);
        deleteButton.setSize(120, 40);

        // Add components to content pane
        contentPane.add(patientIDLabel);
        contentPane.add(patientIDBox);
        contentPane.add(nameLabel);
        contentPane.add(nameField);
        contentPane.add(dobLabel);
        contentPane.add(dobField);
        contentPane.add(phoneLabel);
        contentPane.add(phoneField);
        contentPane.add(emailLabel);
        contentPane.add(emailField);
        contentPane.add(occupationLabel);
        contentPane.add(occupationField);
        contentPane.add(permissionIDLabel);
        contentPane.add(permissionIDField);
        contentPane.add(searchButton);
        contentPane.add(addButton);
        contentPane.add(updateButton);
        contentPane.add(deleteButton);

        setVisible(true);
    }
}

}
